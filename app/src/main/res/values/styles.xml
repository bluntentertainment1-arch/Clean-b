<resources>

    <!-- System splash -->
    <style name="Theme.CleanerGuru.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0A0A0A</item>
        <item name="windowSplashScreenAnimatedIcon">@null</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.CleanerGuru</item>
    </style>

    <!-- App theme -->
    <style name="Theme.CleanerGuru" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- IMPORTANT: Compose must draw the background -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
